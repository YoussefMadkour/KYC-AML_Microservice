# Docker Environment Configuration
# This file contains environment variables optimized for Docker deployment

# Application Configuration
APP_NAME="KYC/AML Microservice"
VERSION="0.1.0"
ENVIRONMENT="development"
DEBUG=false

# Server Configuration
HOST="0.0.0.0"
PORT=8000
ALLOWED_HOSTS=["*"]

# Database Configuration (Docker services)
DATABASE_URL="postgresql://kyc_user:kyc_password@postgres:5432/kyc_db"
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration (Docker services)
REDIS_URL="redis://redis:6379/0"

# Celery Configuration (Docker services)
CELERY_BROKER_URL="amqp://guest:guest@rabbitmq:5672//"
CELERY_RESULT_BACKEND="redis://redis:6379/1"

# Security Configuration
SECRET_KEY="your-secret-key-change-in-production-make-it-long-and-random"
JWT_SECRET_KEY="your-jwt-secret-change-in-production"
JWT_ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Encryption Configuration
ENCRYPTION_KEY="your-base64-encoded-encryption-key-32-bytes"

# Webhook Security
WEBHOOK_SECRET_KEY="webhook-secret-change-in-production"

# Mock Provider Settings
MOCK_PROVIDER_ENABLED=true
MOCK_PROCESSING_DELAY_MIN=5
MOCK_PROCESSING_DELAY_MAX=30

# Logging Configuration
LOG_LEVEL="INFO"
LOG_FORMAT="json"

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100

# Container Configuration
CONTAINER_TIMEZONE="UTC"
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3